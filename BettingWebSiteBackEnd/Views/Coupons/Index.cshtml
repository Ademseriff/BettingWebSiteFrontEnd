                    <td>@x.TotalRate</td>
                    <td>
                        @foreach(var c in x.orderContentContents)
                        {
                            <button type="button" class="btn btn-primary" onclick="showAlert('@c.Tc', '@c.Team1', '@c.Team2', '@c.MatchSide')">Kontrol Et</button>
