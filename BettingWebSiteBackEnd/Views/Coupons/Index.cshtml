@using Shared.Events
@model OrderGetEventResponseEvent;

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bekleyen Kuponlar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .alert-container {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            width: 80%; /* Genişletme */
            max-height: 80%; /* Yükseklik */
            overflow: auto; /* Scroll */
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            color: #721c24;
            z-index: 9999; /* En üstte */
        }

            .alert-container.show {
                display: block;
            }
    </style>
</head>
<body>

    <table>
        <thead>
            <tr>
                <th>Ödenen Tutar</th>
                <th>Toplam Kazanç</th>
                <th>Durum</th>
                <th>Toplam Oran</th>
                <th>Kontrol Et</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.coupunContents)
            {
                <tr>
                    <td>@x.PaidMoney</td>
                    <td>@x.TotalMoney</td>
                    <td>@x.state</td>
                    <td>@x.TotalRate</td>
                    <td>
                        @foreach(var c in x.orderContentContents)
                        {
                            <button type="button" class="btn btn-primary" onclick="showAlert('@c.Tc', '@c.Team1', '@c.Team2', '@c.MatchSide')">Kontrol Et</button>
                        }
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="alertContainer" class="alert-container">
        <div class="alert">
            <table id="alertTable">
                <thead>
                    <tr>
                        <th>Tc</th>
                        <th>Team1</th>
                        <th>Team2</th>
                        <th>Match Side</th>
                    </tr>
                </thead>
                <tbody id="alertTableBody">
                </tbody>
            </table>
            <button onclick="hideAlert()">Tamam</button>
        </div>
    </div>

    <script>
        function showAlert(Tc, Team1, Team2, MatchSide) {
            // Alert kutusunu göster
            var alertContainer = document.getElementById('alertContainer');
            alertContainer.classList.add('show');

            // Alert kutusuna detayları ekle
            var alertTableBody = document.getElementById('alertTableBody');
            alertTableBody.innerHTML = '';

            // Verileri ekle
            var newRow = alertTableBody.insertRow();
            newRow.insertCell().innerText = Tc;
            newRow.insertCell().innerText = Team1;
            newRow.insertCell().innerText = Team2;
            newRow.insertCell().innerText = MatchSide;
        }

        function hideAlert() {
            // Alert kutusunu gizle
            var alertContainer = document.getElementById('alertContainer');
            alertContainer.classList.remove('show');
        }
    </script>

</body>
</html>
